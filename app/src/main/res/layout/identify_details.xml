<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ACTION BAR -->
    <ImageView
        android:id="@+id/customActionBar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/green_primary"
        tools:ignore="MissingConstraints" />

    <!-- ACTION BAR TEXT -->
    <LinearLayout
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back_to_identify"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/logo_ecoexplorer"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:scaleType="centerInside"
            android:src="@drawable/plants_icon" />

        <TextView
            android:id="@+id/actionbar_identify_details"
            style="@style/actionBar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginVertical="10dp"
            android:paddingStart="15dp"
            android:text="DETAILS"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/actionBar">

        <!-- CHALLENGE - CATEGORIES -->
        <LinearLayout
            android:id="@+id/plants_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="10dp">

                <ImageView
                    android:id="@+id/identify_speciesImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:id="@+id/identify_speciesName"
                        style="@style/content2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Species Name" />

                    <TextView
                        android:id="@+id/identify_speciesDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray"
                        android:text="Species Description" />

                </LinearLayout>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/el_card_outlined"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- SCIENTIFIC NAME -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Scientific Name"
                        style="@style/content2"
                        android:textColor="@color/gray"
                        android:textSize="12dp"/>

                    <TextView android:id="@+id/species_sciName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/content2"/>

                    <!-- ECOSYSTEMS -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Ecosystem"
                        style="@style/content2"
                        android:textColor="@color/gray"
                        android:textSize="12dp"/>

                    <TextView android:id="@+id/species_ecosystem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/content2"/>

                    <!-- HABITATS -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Habitat"
                        style="@style/content2"
                        android:textColor="@color/gray"
                        android:textSize="12dp"/>

                    <TextView android:id="@+id/species_habitat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/content2"/>

                    <!-- ROLES -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Role in Ecosystems"
                        style="@style/content2"
                        android:textColor="@color/gray"
                        android:textSize="12dp"/>

                    <TextView android:id="@+id/species_role"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/content2"/>

                </LinearLayout>



            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>