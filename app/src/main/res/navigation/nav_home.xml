<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.ecoexplorer.ui.home.HomeFragment"
        android:label="@string/home_page"
        tools:layout="@layout/home">
        <action
            android:id="@+id/action_navigation_home_to_navigation_identify"
            app:destination="@id/navigation_identify" />
        <action
            android:id="@+id/action_navigation_home_to_fun_facts_detail"
            app:destination="@id/fun_facts_detail" />
    </fragment>

    <fragment
        android:id="@+id/fun_facts_detail"
        android:name="com.example.ecoexplorer.ui.home.FunFactsDetailFragment"
        android:label="FunFacts"
        tools:layout="@layout/home_fun_fact_details"/>

</navigation>