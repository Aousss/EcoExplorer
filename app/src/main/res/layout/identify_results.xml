<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ACTION BAR -->
    <ImageView
        android:id="@id/customActionBar"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@color/green_primary"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/back_to_identify"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />

    <ImageView
        android:layout_width="104dp"
        android:layout_height="104dp"
        android:layout_gravity="center"
        android:layout_marginTop="13dp"
        android:background="@drawable/el_profile_pic"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back_to_identify" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/foundImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        android:background="@color/gray"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back_to_identify"
        app:shapeAppearance="@style/CircleImageStyle" />

    <ScrollView
        android:id="@+id/contentIdentify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/foundImage">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical"
            android:paddingBottom="35dp">

            <TextView
                android:id="@+id/error_identify"
                style="@style/heading2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingHorizontal="30dp"
                android:text="WE ARE SORRY! \n THIS SPECIES ARE CANNOT BE IDENTIFY."
                android:textColor="@color/yellow_primary"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/success_identify"
                style="@style/heading2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingHorizontal="30dp"
                android:text="SPECIES DETECTED!"
                android:textColor="@color/yellow_primary"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/species_nonSciName"
                style="@style/heading2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Species Name"
                android:textColor="@color/green_primary"
                android:textSize="25sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/el_card_outlined"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- SCIENTIFIC NAME -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Scientific Name"
                        style="@style/content2"
                        android:textColor="@color/gray"
                        android:textSize="12dp"/>

                    <TextView android:id="@+id/species_sciName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/content2"/>

                    <!-- ECOSYSTEMS -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Ecosystem"
                        style="@style/content2"
                        android:textColor="@color/gray"
                        android:textSize="12dp"/>

                    <TextView android:id="@+id/species_ecosystem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/content2"/>

                    <!-- HABITATS -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Habitat"
                        style="@style/content2"
                        android:textColor="@color/gray"
                        android:textSize="12dp"/>

                    <TextView android:id="@+id/species_habitat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/content2"/>

                    <!-- ROLES -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Role in Ecosystems"
                        style="@style/content2"
                        android:textColor="@color/gray"
                        android:textSize="12dp"/>

                    <TextView android:id="@+id/species_role"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/content2"/>

                </LinearLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/scanIdentify_again"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/green_primary"
                app:cardCornerRadius="10dp">

                <TextView
                    style="@style/content2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="5dp"
                    android:gravity="center"
                    android:text="Take Another Photo"
                    android:textColor="@color/white" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>