<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Night theme -->
    <style name="Theme.EcoExplorer.Night" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color (darker green for night) -->
        <item name="colorPrimary">@color/green_night_primary</item>
        <item name="colorPrimaryVariant">@color/green_night_secondary</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color (muted yellow for night) -->
        <item name="colorSecondary">@color/yellow_night_primary</item>
        <item name="colorSecondaryVariant">@color/yellow_night_secondary</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Background surfaces -->
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnSurface">@color/white</item>

        <item name="android:statusBarColor">?attr/colorPrimary</item>
    </style>

</resources>